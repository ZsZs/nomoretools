{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nginx-proxy-static",
      "host": {
        "sourcePath": "/var/app/current/proxy/html"
      }
    },
    {
      "name": "nginx-proxy-conf",
      "host": {
        "sourcePath": "/var/app/current/proxy/conf.d"
      }
    }
  ],
  
  "containerDefinitions": [
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "nexus-app",
        "seleniumhub"
      ],
      "mountPoints": [
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        },
        {
          "sourceVolume": "nginx-proxy-static",
          "containerPath": "/usr/share/nginx/html",
          "readOnly": true
        },
        {
          "sourceVolume": "nginx-proxy-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        }
      ]
    },

    {
      "name": "nexus-app",
      "image": "zsuffazs/ci-nexus",
      "essential": true,
      "memory": 128,
      "portMappings": [
        {
          "hostPort": 18081,
          "containerPort": 8081
        }
      ],
      "environment": [
        {
          "name": "NEXUS_WEBAPP_CONTEXT_PATH",
          "value": "/nexus"
        }
      ]
    },
    
    {
      "name": "seleniumhub",
      "image": "selenium/hub",
      "portMappings": [
        {
          "hostPort": 4444,
          "containerPort": 4444
        }
      ],
      "essential": true,
      "memory": 128
    },
    
    {
      "name": "node-chrome",
      "image": "selenium/node-chrome",
      "environment": [
        {
          "name": "HUB_PORT_4444_TCP_ADDR",
          "value": "seleniumhub"
        }
      ],
      "links": [
        "seleniumhub"
      ],
      "essential": true,
      "memory": 128
    },
    
    {
      "name": "node-firefox",
      "image": "selenium/node-firefox",
      "environment": [
        {
          "name": "HUB_PORT_4444_TCP_ADDR",
          "value": "seleniumhub"
        }
      ],
      "links": [
        "seleniumhub"
      ],
      "essential": true,
      "memory": 128
    }
            
  ]
}